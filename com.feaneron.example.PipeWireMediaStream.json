{
    "app-id" : "com.feaneron.example.PipeWireMediaStream",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "pipewire-media-stream",
    "finish-args" : [
        "--device=dri",
        "--filesystem=xdg-run/pipewire-0",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [

        {
            "name" : "libportal",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dbackends=gtk4",
                "-Ddocs=false",
                "-Dintrospection=false",
                "-Dvapi=false",
                "-Dportal-tests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/flatpak/libportal.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "pipewire-media-stream",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/feaneron/pipewire-media-session.git",
                    "branch" : "main"
                }
            ]
        }
    ]
}
